<h1>Create Resource</h1>

<%= form_with(model: @resource, local: true, enctype: 'multipart/form-data') do |form| %>
  <div class="form-group">
    <%= form.label :title, "Title:" %>
    <%= form.text_field :title, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Description:" %>
    <%= form.text_field :description, required: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :hyperlink, "Hyperlink:" %>
    <%= form.text_field :hyperlink, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :type, "Resource Type:" %>
    <%= form.select :type, ["Video", "Url", "Document"], { include_blank: "Select Resource Type" }, { :required => true, :class => "form-control" } %>
      </div>



 <%
=begin%>
 <div class="form-group">
    <%= form.label :file, "File name:" %>
    <%= form.file_field :file, class: "form-control" %>
    </div>    
<%
=end%>

 
 <div class="form-group">
    <%= form.label :encrypted_file, "File :" %>
    <%= form.file_field :encrypted_file, class: "form-control" %>
    </div>    





  <div class="actions">
    <br><%= form.submit "Save Resource", class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>
